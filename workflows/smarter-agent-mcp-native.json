        }
      },
      "id": "prepare-log-mcp",
      "name": "Prepare Log",
      "type": "n8n-nodes-base.set",
      "typeVersion": 3.2,
      "position": [1340, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "={{ $env.SMARTER_MCP_SERVER }}/tools/vault_write",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpHeaderAuth",
        "sendBody": true,
        "bodyParameters": {
          "parameters": [
            {
              "name": "path",
              "value": "={{ $json.vault_path }}"
            },
            {
              "name": "data",
              "value": "={{ JSON.stringify($json.log) }}"
            },
            {
              "name": "tenant_id",
              "value": "={{ $json.log.tenant_id }}"
            }
          ]
        }
      },
      "id": "save-via-mcp",
      "name": "Save Log via MCP",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [1560, 300],
      "credentials": {
        "httpHeaderAuth": {
          "id": "smarter-mcp-auth",
          "name": "SmarterMCP Auth Token"
        }
      }
    },
    {
      "parameters": {
        "respondWith": "json",
        "responseBody": "={{ JSON.stringify($json.log, null, 2) }}",
        "options": {
          "responseCode": 200,
          "responseHeaders": {
            "entries": [
              {
                "name": "Content-Type",
                "value": "application/json"
              },
              {
                "name": "X-Agent",
                "value": "SmarterAgent-MCP-Native/2.0"
              },
              {
                "name": "X-MCP-Server",
                "value": "={{ $env.SMARTER_MCP_SERVER }}"
              },
              {
                "name": "X-Execution-Path",
                "value": "={{ $json.log.execution_path.join('→') }}"
              }
            ]
          }
        }
      },
      "id": "respond-success-mcp",
      "name": "Respond Success",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [1780, 300]
    }
  ],
